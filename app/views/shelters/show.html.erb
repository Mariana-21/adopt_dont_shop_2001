<%= link_to 'View All Pets', "/pets" %><br>
<%= link_to 'View All Shelters', "/shelters" %><br>
<%= link_to 'View This Shelters Pets', "/shelters/#{@shelter.id}/pets" %><br>

<h1><%= @shelter.name %></h1>
<p><%= @shelter.address %></p>
<p><%= @shelter.city %>, <%= @shelter.state %> <%= @shelter.zip %></p>

<% @shelter.reviews.each do |review| %>
  <% if review.save %>
    <h3><%= review.title %></h3>
    <p>Rating: <%= review.rating %></p>
    <p>More Information:
      <%= review.content %></p>
    <img src="<%= review.picture %>">
    <%= link_to 'Edit review', "/shelters/#{@shelter.id}/#{review.id}/edit" %>
  <% end %>
<% end %>

<%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit" %>
<br/>
<%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}", method: :delete %>
